  <section id="formular">
    <h2>游닇 Formul치콏</h2>
    <form id="cityForm">
      <input type="text" id="filterSelect" placeholder="Filtrovat m캩sta ve v칳b캩ru">
      <select id="citySelect">
        <option>Praha</option>
        <option>Brno</option>
        <option>Ostrava</option>
        <option>Plze켿</option>
